@model IEnumerable<WebApp.Models.Hobby>

@{
    ViewData["Title"] = "Home";
}
<div class="jumbotron">
    <h1>Welcome!</h1>
    <p>To my site. It contains no good information :P</p>
    <p><a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="About">Read more</a></p>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>About me</h2>
        <ul>
            <li>33 years old.</li>
            <li>Lives outside of Karlskrona, Sweden.</li>
            <li>Has 2 kids.</li>
        </ul>
    </div>
    <div class="col-md-6">
        <h2>Hobbies</h2>
        <ul>
            @foreach ( var item in Model ) {
                <li>@Html.DisplayFor( modelItem => item.Title )</li>
            }
        </ul>
    </div>
</div>
